<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.ConfirmSeedActivity">

    <com.liu.ljwallet.layout.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确认助记词"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="请按照顺序点击助记词，以确认您正确备份。"
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        />
    <TableLayout
        android:id="@+id/table1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <TableRow android:gravity="center"
                  android:layout_weight="1">
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode1"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode2"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode3"/>
        </TableRow>
        <TableRow android:gravity="center"
                  android:layout_weight="1">
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode4"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode5"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode6"/>
        </TableRow>
        <TableRow android:gravity="center"
                  android:layout_weight="1">
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode7"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode8"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode9"/>
        </TableRow>
        <TableRow android:gravity="center"
                  android:layout_weight="1">
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode10"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode11"/>
            <TextView android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:id="@+id/mnemonicCode12"/>
        </TableRow>
    </TableLayout>
    <TableLayout
        android:id="@+id/pointTable"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"></TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/sureBackUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:gravity="center"
            android:background="@drawable/shape_create_close"
            android:text="下一步"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.CreateWalletActivity">
    <com.liu.ljwallet.layout.TitleBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建身份"
        android:textSize="20dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="你将会拥有身份下的多链钱包，比如ETH、BTC、EOS、COSMOS..."
        android:textSize="15dp"
        android:layout_marginLeft="30dp"
        />
    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="30dp"
        android:hint="身份名"
        />
    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:inputType="textPassword"
        android:hint="密码"
        />
    <EditText
        android:id="@+id/rePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:inputType="textPassword"
        android:hint="重复输入密码"
        />
    <EditText
        android:id="@+id/passQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:background="@android:color/transparent"
        android:layout_marginTop="50dp"
        android:hint="密码提示（可选）"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:orientation="vertical">
        <TextView
            android:id="@+id/createSub"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:textSize="20dp"
            android:background="@drawable/shape_create_close"
            android:text="创建"
            />
    </LinearLayout>
</LinearLayout>
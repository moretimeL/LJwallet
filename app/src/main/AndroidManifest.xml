<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.liu.ljwallet">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.LJwallet">
        <activity android:name=".activity.SendActivity"></activity>
        <activity android:name=".activity.MyWalletActivity" />
        <activity android:name=".activity.ConfirmSeedActivity" />
        <activity android:name=".activity.BackUpSeedActivity" />
        <activity android:name=".activity.ImportWalletActivity" />
        <activity android:name=".activity.CreateWalletActivity" />
        <activity android:name=".IndexActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/LunchTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>